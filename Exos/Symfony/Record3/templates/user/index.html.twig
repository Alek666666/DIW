{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="d-flex justify-content-around mt-3 mb-3">
    <h1 class="text-info">User index</h1>
</div>

    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="text-light" href="{{ path('app_user_show', {'id': user.id}) }}"><button class="btn btn-info">Show</a></button>
                    <a class="text-light" href="{{ path('app_user_edit', {'id': user.id}) }}"><button class="btn btn-info">Edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-light" href="{{ path('app_user_new') }}"><button class="btn btn-info">Create new</a></button>
{% endblock %}
