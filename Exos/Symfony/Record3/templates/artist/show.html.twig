{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="text-info mt-3 mb-3">Artist details</h1>
</div>

    <table class="table text-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ artist.url }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_artist_index') }}"><button class="btn btn-info ml-3 mr-3">Artists list</button></a>
    <a href="{{ path('app_artist_edit', {'id': artist.id}) }}"><button class="btn btn-info">Edit</button></a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
