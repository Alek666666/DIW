{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>UserName</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>UserLastname</th>
                <td>{{ user.userLastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ user.birthdate|format_datetime('short', 'none', locale='fr') }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
             <tr>
                <th>Phone number</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% if is_granted('ROLE_ADMIN') %}
    <button class="btn btn-info border-light"><a class="text-light" href="{{ path('app_user_index') }}">back to list</a></button>
{% endif %}
    <button class="btn btn-info border-light"><a class="text-light" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button>

{% if is_granted('ROLE_ADMIN') %}
    {{ include('user/_delete_form.html.twig') }}
{% endif %}
{% endblock %}
