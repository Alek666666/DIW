{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

<div class="container">
	<h1 class="text-info text-center">Register</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.userName) }}
	{{ form_row(registrationForm.userLastname) }}
	{{ form_row(registrationForm.birthdate) }}
	{{ form_row(registrationForm.adress) }}
	{{ form_row(registrationForm.phoneNumber) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn btn-outline-info mb-3">Register</button>
	{{ form_end(registrationForm) }}
	</div>
{% endblock %}
